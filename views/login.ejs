<!DOCTYPE html>
<html>
	<head>
		<title>Passport-Persona Example</title>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
		<script src="https://login.persona.org/include.js" type="text/javascript"></script>
	</head>
<body>
<% if (!user) { %>
<p>
                        <a href="/">Home</a> | 
                        <a href="/account">Account</a> | 
                        <a href="/login">Login</a>
                        </p>

        <h2>Welcome! Please log in.</h2>
<% } else { %>
<p>
                        <a href="/">Home</a> | 
                        <a href="/account">Account</a> | 
                        <a href="/logout">Log Out</a>
                        </p>

        <h2>Hello, <%= user.email %>.</-h2>
<% } %>			
<form action="/auth/browserid" method="post" style="display:none;">
	<input type="text" name="assertion"/>
</form>

<img src="https://developer.mozilla.org/files/3969/plain_sign_in_blue.png" id="browserid"/>
<script>
  $("#browserid").click(function(){
    navigator.id.get(function(assertion) {
      if (assertion) {
        $("input").val(assertion);
        $("form").submit();
      } else {
        location.reload();
      }
    });
  });
</script>

</body>
</html>
