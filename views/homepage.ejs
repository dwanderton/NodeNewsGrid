      <div class="row">
 <% 
if (60 >= world_bbc_stories.length-1){
 var i = world_bbc_stories.length-1;
 var j = world_bbc_stories.length-1;
} else {
 var i = 60;
 var j = 60;
}
for (i; i > 0 ; i--) { 
    // display stories currently in db %>
	<div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
	  <a data-toggle="modal" href="#storyModal<%= i %>">  
	    <img data-toggle="tooltip" src="<%= world_bbc_stories[i].thumbnail %>" title="<%= world_bbc_stories[i].title %>" class="tooltipnow" />
	  </a>
	</div>
<% } %>

      </div>


    </div> <!-- /container -->
  <!-- Modal -->

<% for (var j; j > 0 ; j--) { 
    // modals for stories currently in db %>
  <div class="modal fade" id="storyModal<%= j %>" tabindex="-1" role="dialog" aria-labelledby="storyModalLabel<%= j %>" aria-hidden="true">
    <div class="modal-dialog">                                                                                                                                                     
      <div class="modal-content">                                                                                                                                                  
        <div class="modal-header">                                                                                                                                                 
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>                                                                             
          <h4 class="modal-title"><%= world_bbc_stories[j].title %></h4>                                                                                           
        </div>                                                                                                                 
        <div class="modal-body">
	      	    <img data-toggle="tooltip" src="<%= world_bbc_stories[j].thumbnail %>" title="<%= world_bbc_stories[j].title %>" class="tooltipnow" style="height: 81px; width: 144px;">
       <%= world_bbc_stories[j].description %>                                                                                               
	                
        </div>                                                                                                                                                                     
        <div class="modal-footer">                                                                                                                                                 
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>                                                                                        
        </div>                                                                                                                                                                     
      </div><!-- /.modal-content -->                                                                                                                                               
    </div><!-- /.modal-dialog -->                                                                                                                                                  
  </div><!-- /.modal -->                                                                                                                                                           
 <% } %>
                              



