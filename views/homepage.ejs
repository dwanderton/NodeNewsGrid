    <!-- Lets get our fade on -->
    <script>
      function refreshHover() {
        $('div.col-lg-2 img').hoverIntent(function(){
            $(this).fadeTo('fast', 1);
        }, function(){
            $(this).fadeTo('fast', 0.5);
            if (!$(this).hasClass("indb")){
              var storyclass = $(this).parent().parent().attr('class').split(/\s/);
              $.post( "api/addstoryread", { "storyViewed": storyclass[storyclass.length -1]}, function() {});
              $(this).addClass("indb");
          };
         });
      };

      function modalsFavesFades() {
      // remove modal duplicate content and spawn on demand
      $('a.externalModal').on('click', function(e) {
      e.preventDefault();
      var image = $(this).children("img").attr("src");
      var published = $(this).children("img").attr("published");
      var numviews = $(this).children("img").attr("numviews");
      var title = $(this).children("img").attr("storytitle");
      var fullstorylink = $(this).children("img").attr("fullstorylink");
      var description = $(this).children("img").attr("description");
      $(".fullStoryModalHeader").html('<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button><h4 class="modal-title">'+title+'</h4>');
      $(".fullStoryModalBody").html('<div class="media"><div class="pull-left"><img class="thumbnail media-object" src="'+image+'" /></div><div class="media-body">'+description+' View the <a href="'+fullstorylink+'" target="_blank">[full story]</a>.</div>');
	$(".fullStoryModalFooter").html('<span class="col-lg-4 col-md-4 col-sm-4 col-xs-4"><p class="text-center"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;'+numviews+'</p></span><a><span class="col-lg-4 col-md-4 col-sm-4 col-xs-4"><p class="text-center"><span class="glyphicon glyphicon-star '+published+'"></span></p></span></a><a><span class="col-lg-4 col-md-4 col-sm-4 col-xs-4"><p class="text-center"><span class="glyphicon glyphicon-share '+published+'"></span></p></span></a>')
      });
	
      
      //add and remove favorites          
      $('span.glyphicon-star').on('click',function(){ 
        var storyclass = $(this).attr('class').split(/\s/);
        
        if(!$(this).hasClass("favorite")){
          $.post( "api/addstoryfavorited", { "storyFavorited": storyclass[storyclass.length -1]}, function() {});
          $(this).addClass("favorite");
          var faveStar = "div.";
          faveStar += storyclass[storyclass.length -1];
          faveStar += " span";
          $(faveStar).show();
        
        } else {
          $.post( "api/removestoryfavorited", { "storyFavorited": storyclass[storyclass.length -2]}, function() {});
          $(this).removeClass("favorite");  
          var faveStar = "div.";
          faveStar += storyclass[storyclass.length -2];
          faveStar += " span";
          $(faveStar).hide();
        };
      });

      //get story read list and fade
      $.getJSON("/api/storyread", function( data ){
       $.each(data, function(dataElement, dataValue){
         var fadeMe = "div.";
         fadeMe += dataValue.bbcpublished; 
         fadeMe += " img";
         $(fadeMe).fadeTo('fast', 0.5);
         $(fadeMe).addClass("indb");
       });	
      });
      
      //get favorite list and show stars
      $.getJSON("/api/storyfavorited", function( data ){
       $.each(data, function(dataElement, dataValue){
         var faveMe = "span.glyphicon-star.";
         faveMe += dataValue.bbcpublished;
         var showStar = "div."
         showStar += dataValue.bbcpublished;
         showStar += " span";
         $(showStar).show(400);
         $(faveMe).addClass("favorite");
       });	
      });
      
     };

      $(document).ready(function(){
	refreshHover();
	modalsFavesFades();
	});
    </script>
